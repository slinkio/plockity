{{#bs-modal id="login-modal" dismissible=true title='<h2><i class="fa fa-fw fa-user"></i> Login</h2>'}}
  <form {{action "login" on="submit"}}>
    <div class="modal-body">  
      <div class="form-group">
        {{input type="email" class="form-control input-lg input-success" value=email placeholder="Email Address"}}
      </div>
      <div class="form-group">
        {{input type="password" class="form-control input-lg input-success" value=password placeholder="Password"}}
      </div>
    </div>
    <div class="modal-footer">
      {{#if parsedLoginError}}
        <p class="text-center text-danger">{{{parsedLoginError}}}</p>
      {{/if}}
      <button type="submit" class="btn btn-lg btn-success btn-block" {{bind-attr disabled=notAllowSubmit}}>Log in{{#if session.loggingIn}} <i class="fa fa-fw fa-spin fa-spinner"></i>{{/if}}</button>
    </div>
  </form>
{{/bs-modal}}